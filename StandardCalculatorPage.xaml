<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CalculatorApp.Views.StandardCalculatorPage"
             Title="Standard Calculator">
    <Grid RowDefinitions="Auto,*" ColumnDefinitions="*" Padding="10">

        <Label x:Name="DisplayLabel" Text="0" FontSize="48" FontAttributes="Bold" HorizontalTextAlignment="End" VerticalTextAlignment="Center" Margin="0,0,10,0" Grid.Row="0"/>

        <Grid Grid.Row="1" ColumnSpacing="5" RowSpacing="5">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Row 0 -->
            <Button Text="%" Grid.Row="0" Grid.Column="0" Clicked="OnUnaryOperationClicked" Style="{StaticResource OperatorButton}" />
            <Button Text="CE" Grid.Row="0" Grid.Column="1" Clicked="OnClearEntryClicked" Style="{StaticResource ClearButton}" />
            <Button Text="C" Grid.Row="0" Grid.Column="2" Clicked="OnClearAllClicked" Style="{StaticResource ClearButton}" />
            <Button Text="⌫" Grid.Row="0" Grid.Column="3" Clicked="OnBackspaceClicked" Style="{StaticResource OperatorButton}" />

            <!-- Row 1 -->
            <Button Text="1/x" Grid.Row="1" Grid.Column="0" Clicked="OnUnaryOperationClicked" Style="{StaticResource OperatorButton}" />
            <Button Text="x²" Grid.Row="1" Grid.Column="1" Clicked="OnUnaryOperationClicked" Style="{StaticResource OperatorButton}" />
            <Button Text="√x" Grid.Row="1" Grid.Column="2" Clicked="OnUnaryOperationClicked" Style="{StaticResource OperatorButton}" />
            <Button Text="÷" Grid.Row="1" Grid.Column="3" Clicked="OnOperatorClicked" Style="{StaticResource OperatorButton}" />

            <!-- Row 2 -->
            <Button Text="7" Grid.Row="2" Grid.Column="0" Clicked="OnDigitClicked" Style="{StaticResource NumberButton}" />
            <Button Text="8" Grid.Row="2" Grid.Column="1" Clicked="OnDigitClicked" Style="{StaticResource NumberButton}" />
            <Button Text="9" Grid.Row="2" Grid.Column="2" Clicked="OnDigitClicked" Style="{StaticResource NumberButton}" />
            <Button Text="×" Grid.Row="2" Grid.Column="3" Clicked="OnOperatorClicked" Style="{StaticResource OperatorButton}" />

            <!-- Row 3 -->
            <Button Text="4" Grid.Row="3" Grid.Column="0" Clicked="OnDigitClicked" Style="{StaticResource NumberButton}" />
            <Button Text="5" Grid.Row="3" Grid.Column="1" Clicked="OnDigitClicked" Style="{StaticResource NumberButton}" />
            <Button Text="6" Grid.Row="3" Grid.Column="2" Clicked="OnDigitClicked" Style="{StaticResource NumberButton}" />
            <Button Text="−" Grid.Row="3" Grid.Column="3" Clicked="OnOperatorClicked" Style="{StaticResource OperatorButton}" />

            <!-- Row 4 -->
            <Button Text="1" Grid.Row="4" Grid.Column="0" Clicked="OnDigitClicked" Style="{StaticResource NumberButton}" />
            <Button Text="2" Grid.Row="4" Grid.Column="1" Clicked="OnDigitClicked" Style="{StaticResource NumberButton}" />
            <Button Text="3" Grid.Row="4" Grid.Column="2" Clicked="OnDigitClicked" Style="{StaticResource NumberButton}" />
            <Button Text="+" Grid.Row="4" Grid.Column="3" Clicked="OnOperatorClicked" Style="{StaticResource OperatorButton}" />

            <!-- Row 5 -->
            <Button Text="+/-" Grid.Row="5" Grid.Column="0" Clicked="OnUnaryOperationClicked" Style="{StaticResource NumberButton}" />
            <Button Text="0" Grid.Row="5" Grid.Column="1" Clicked="OnDigitClicked" Style="{StaticResource NumberButton}" />
            <Button Text="." Grid.Row="5" Grid.Column="2" Clicked="OnDigitClicked" Style="{StaticResource NumberButton}" />
            <Button Text="=" Grid.Row="5" Grid.Column="3" Clicked="OnEqualsClicked" Style="{StaticResource EqualsButton}" />
        </Grid>
    </Grid>
</ContentPage>